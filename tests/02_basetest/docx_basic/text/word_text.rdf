# test report input
*version=3
*documenttype=docx
*datadir=.\data

# global means replace everywhere, but is not able to add further tags
global
.report:id='ID 4711'
.date:published='01. August 2020'
.report:version=1.0
.report:status='Draft'

#
section:title
.text:description=file:title.txt
.date:creation=date:now
.author='Thomas'

# comment
section:second
  .text:description='This is the second section'
  @marker:content
    +text:blue="Where will this end?"

# there is one subsection:instruction already in the document
section:second.subsection:seconda
  .head='Header 1'
  .text:description='This is a subsection A of section second'
  @marker:content
    +text:italicred=file:bootseal.txt
    +text:italicred=file:dolor.txt
    +text:italicred=file:donotexist.txt
  .subsubsection:secondsub1.item='This is s subsection ITEM head'
  .subsubsection:secondsub1.subsubsubsection:secondsubsubi.subitem='This is s subsubsection SUBITEM head'


# but we require more
section:second.subsection:seconda
  .head='Header 2'
  .text:description='This is a another subsection A of section second'
  @marker:content
    +text:bold=file:nonsense.txt
    +text:bold=file:donotexist.txt

    
section:second.subsection:secondb
  .head='Header 3'
  .text:description='This is a subsection B of section second'
  @marker:content
    +text:green=file:dolor.txt
    &include+=loopfiles:textinclude*.rdf
    +text:green='Some last words...'

