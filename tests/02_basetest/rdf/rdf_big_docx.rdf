# test report input
*version=100
*documenttype=docx
*datadir=./data

# global means replace everywhere, but is not able to add further tags
global
.report:id='ID 4711'
.date:published='01. August 2020'
.report:version=1.0
.report:status='Draft'

#
section:title
.report:Product_name='A pudding'
.report:Designer_Name='Mr. X'
.report:Menu=parfile:SomeParameters.nv:MenuTitle
.Image:MainModel=file:pudding.jpg
.text:description=file:title.txt
.date:creation=date:now
.author='Thomas'

# comment
section:instruction_bc
  .text:description='These are the cooking instructions'
  .image:inline=file:instruction2.png+description='temperatures'
  .table:inline=file:instructiongeneral.csv+description='temperatures'

# there is one subsection:instruction already in the document
section:instruction_bc.subsection:instruction
  .head='Instruction 1'
  .text:description='There is a finish applied'
  @marker:content
    +image:generic=file:instruction1.png+description='instruction one'
    +image:generic=file:instruction1b.png+description='instruction one other view'

# but we require more
section:instruction_bc.subsection:instruction
  .head='Serving'
  .text:description='This instruction adds a single instruction at the front'
  @marker:content
    +image:generic=file:instruction2.png+description='instruction two'
    +table:generic=file:instruction2.csv+description='instruction two'
    
section:instruction_bc.subsection:bc
  .head='Dishes'
  .text:description='A simple instruction'
  @marker:content
    +image:generic=file:plate1.png+description='plate'
    +text:generic=file:plate1.txt
    &include+=loopfiles:rdf_big_instructions*.rdf

# tools 
section:tool
  .table:tools=file:tools.csv
  @marker:addtool
  &include+=loopfiles:rdf_big_tool*.rdf

# analysis cases
section:preparations
  .text:description='A short description of the dinner'
  .whatever='This is the end of the day!'
  &include+=loopfiles:rdf_big_preparation??.rdf

