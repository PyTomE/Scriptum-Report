# test report input
*version=3
*documenttype=docx
*datadir=.\data

# global means replace everywhere, but is not able to add further tags
global
.report:id='ID 4711'
.date:published='01. August 2020'
.report:version=1.0
.report:status='Draft'

#
section:title
.report:Product_name='A pudding'
.report:Designer_Name='Mr. X'
.report:Reason='A pudding in space 1'
.Image:MainModel=file:pudding.png
#.Image:MainModel=file:pudding.jpg
.text:description=file:title.txt
.date:creation=date:now
.author='Thomas'

# comment
section:instructions
  .text:description='These are the general instructions'
  .image:inline=file:rocket.png+description='prepare a rocket'
  .table:inline=file:instructionsrocket.csv+description='rocket checks'

section:instructions.subsection:condition
  .head='Cooking Basics'
  .text:description='You should have at least some knowledge about cooking...'

# there is one subsection:instruction already in the document
section:instructions.subsection:instruction
  .head='Cooking Instruction 1'
  .text:description='Get your favorite pudding recipe'
  @marker:content
    +image:generic=file:recipe1.png+description='instruction one'
    
# but we require more
section:instructions.subsection:instruction
  .head='Cooking Instruction 2'
  .text:description='If the first instruction fails, take this one'
  @marker:content
    +image:generic=file:recipe2.png+description='instruction two'
    
section:instructions.subsection:instruction
  .head='Cool it'
  .text:description='Get a fridge, implement it into the rocket, and put the pudding into the fridge'
  @marker:content
#    +image:generic=file:fridge.jpg+description='old fridge'
    +image:generic=file:fridge.png+description='old fridge'+height=5cm
    +text:generic=file:fridge.txt
    &include+=loopfiles:instruction*.rdf

# tools 
section:tools
  .table:tools=file:tools.csv
  @marker:addtool
  &include+=loopfiles:tool*.rdf

# serving proposals
section:preparations
  .text:description='How to serve a pudding in space'
  .whatever='This is the end the preps...'
  &include+=loopfiles:preparation*.rdf

# kpi and testplan
section:results
  @marker:addresult
  &include+=loopfiles:testplan*.rdf
